<div id="InfoModal" class="modal fade @ViewBag.InfoShow" tabindex="-1" role="dialog" aria-labelledby="ErrorHeader" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="InfoHeader">@ViewBag.InfoHeader</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="InfoMessage">@ViewBag.InfoMessage</p>
            </div>
        </div>
    </div>
</div>
